<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/background_thumb"/>
            <size android:width="@dimen/thumb_size"
                android:height="@dimen/thumb_size"/>
            <stroke android:width="@dimen/stroke"
                android:color="@color/stroke_off"/>
        </shape>
    </item>
    <item android:drawable="@drawable/ic_volume_off_green_24dp"
        android:left="@dimen/margin_image_inside_button"
        android:right="@dimen/margin_image_inside_button"
        android:top="@dimen/margin_image_inside_button"
        android:bottom="@dimen/margin_image_inside_button"/>
</layer-list>